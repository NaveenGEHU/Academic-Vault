<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:elevation="5dp"
    tools:context=".view_subject">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/titlebar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFAFA"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Subject"
                    android:textColor="#090101"
                    android:textSize="19sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/subjectdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D8F3F4"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="68dp"
                    android:layout_height="92dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/logo" />

                <TextView
                    android:id="@+id/subjectname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Data Structure"
                    android:textColor="#100101"
                    android:textSize="40sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/documentcountofsubject"
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="6"
                        android:textColor="#645F5F" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="documents"
                        android:textColor="#645F5F" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/upload_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFFFF"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:outlineProvider="none"
                    android:padding="10dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/uploadButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/dashed_border"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="+    Upload document"
                        android:textColor="#504D4D"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/notes_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="42dp"
                        android:layout_height="31dp"
                        android:background="@color/white"
                        android:padding="4dp"
                        app:srcCompat="@drawable/icon_notes" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:padding="4dp"
                        android:text="Notes"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/bookcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:padding="4dp"
                        android:text="2"
                        android:textColor="@color/black" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/notescard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="7dp">

                        <LinearLayout
                            android:id="@+id/name_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/note_title"
                                android:layout_width="345dp"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="6dp"
                                android:text="Intoduction to array"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="match_parent"
                                android:layout_height="21dp"
                                app:srcCompat="@drawable/icon_notes2" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/metadata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/note_dateofupload"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="6dp"
                                android:text="Jan ,15 ,2025"
                                android:textColor="#716C6C" />

                            <TextView
                                android:id="@+id/note_sizeofdoc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:text="5.6MB"
                                android:textColor="#716C6C" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/assignments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/assignments_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/assignments_icon"
                        android:layout_width="42dp"
                        android:layout_height="31dp"
                        android:background="@color/white"
                        android:padding="4dp"
                        app:srcCompat="@drawable/icon_assignments" />

                    <TextView
                        android:id="@+id/assignments_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:padding="4dp"
                        android:text="Assignments"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/assignment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:padding="4dp"
                        android:text="1"
                        android:textColor="@color/black" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/assignmentscard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="7dp">

                        <LinearLayout
                            android:id="@+id/assignment_name_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/assignment_title"
                                android:layout_width="345dp"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="6dp"
                                android:text="Assignment 1"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/assignment_menu_icon"
                                android:layout_width="match_parent"
                                android:layout_height="21dp"
                                app:srcCompat="@drawable/icon_notes2" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/assignment_metadata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/assignment_dateofupload"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="6dp"
                                android:text="Feb ,20 ,2025"
                                android:textColor="#716C6C" />

                            <TextView
                                android:id="@+id/assignment_sizeofdoc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:text="2.3MB"
                                android:textColor="#716C6C" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/books"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/books_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/books_icon"
                        android:layout_width="42dp"
                        android:layout_height="31dp"
                        android:background="@color/white"
                        android:padding="4dp"
                        app:srcCompat="@drawable/icon_book" />

                    <TextView
                        android:id="@+id/books_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:padding="4dp"
                        android:text="Books"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/books_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:padding="4dp"
                        android:text="0"
                        android:textColor="@color/black" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/bookscard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="7dp">

                        <LinearLayout
                            android:id="@+id/book_name_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/book_title"
                                android:layout_width="345dp"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="6dp"
                                android:text="Book Title 1"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/book_menu_icon"
                                android:layout_width="match_parent"
                                android:layout_height="21dp"
                                app:srcCompat="@drawable/icon_notes2" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/book_metadata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/book_dateofupload"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="6dp"
                                android:text="Jan ,1 ,2025"
                                android:textColor="#716C6C" />

                            <TextView
                                android:id="@+id/book_sizeofdoc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:text="10.2MB"
                                android:textColor="#716C6C" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/important"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/important_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/important_icon"
                        android:layout_width="42dp"
                        android:layout_height="31dp"
                        android:background="@color/white"
                        android:padding="4dp"
                        app:srcCompat="@drawable/icon_important" />

                    <TextView
                        android:id="@+id/important_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:padding="4dp"
                        android:text="Important"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/important_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:padding="4dp"
                        android:text="0"
                        android:textColor="@color/black" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/importantcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="7dp">

                        <LinearLayout
                            android:id="@+id/important_name_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/important_title"
                                android:layout_width="345dp"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="6dp"
                                android:text="Important Doc 1"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/important_menu_icon"
                                android:layout_width="match_parent"
                                android:layout_height="21dp"
                                app:srcCompat="@drawable/icon_notes2" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/important_metadata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/important_dateofupload"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="6dp"
                                android:text="Jan ,2 ,2025"
                                android:textColor="#716C6C" />

                            <TextView
                                android:id="@+id/important_sizeofdoc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:text="1.1MB"
                                android:textColor="#716C6C" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pyqs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/pyqs_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pyqs_icon"
                        android:layout_width="42dp"
                        android:layout_height="31dp"
                        android:background="@color/white"
                        android:padding="4dp"
                        app:srcCompat="@drawable/icon_pyq" />

                    <TextView
                        android:id="@+id/pyqs_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:padding="4dp"
                        android:text="PYQs"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/pyq_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:padding="4dp"
                        android:text="0"
                        android:textColor="@color/black" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pyqscard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="7dp">

                        <LinearLayout
                            android:id="@+id/pyq_name_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/pyq_title"
                                android:layout_width="345dp"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="6dp"
                                android:text="PYQ 2023"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/pyq_menu_icon"
                                android:layout_width="match_parent"
                                android:layout_height="21dp"
                                app:srcCompat="@drawable/icon_notes2" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/pyq_metadata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/pyq_dateofupload"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="6dp"
                                android:text="Dec ,25 ,2024"
                                android:textColor="#716C6C" />

                            <TextView
                                android:id="@+id/pyq_sizeofdoc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:text="4.8MB"
                                android:textColor="#716C6C" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>